<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/Clickk"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/imageViewListDoneeRequest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvdoneenammmme"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Name " />
                <TextView
                    android:id="@+id/tvDoneename"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/capsulebuttonboundary"
                    android:text="Name" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClot"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="ClothId " />
                <TextView
                    android:id="@+id/tvDoneeReqClothId"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/capsulebuttonboundary"
                    android:text="Cloth" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQuan"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Quantity "
                    android:textColor="#000"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/tvDoneeBoxQuantity"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/capsulebuttonboundary"
                    android:text="Quantity" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>