<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reciever_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context="com.example.qaiserpasha.project2017.SighUpFolder.DoneeSignUp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="350dp"
        android:background="@drawable/capsulebuttonboundary"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewe"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/txtDonName_signup"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/capsulebuttonboundary"
            android:hint="Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#534b4b" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="115dp"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/txtDonUserName_signup"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/capsulebuttonboundary"
            android:hint="User Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#534b4b" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="235dp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/txtDonPassword_signup"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/capsulebuttonboundary"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#534b4b" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/password" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/phone" />

        <EditText
            android:id="@+id/txtDonPhone_signup"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/capsulebuttonboundary"
            android:hint="Phone No"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColorHint="#534b4b" />


        <Button
            android:id="@+id/btnSubmitt"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="95dp"
            android:background="@drawable/capsule_button"
            android:text="Submit"
            android:textColorHint="#000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDonConfirmPassword_signup"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/capsulebuttonboundary"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#534b4b" />

        <EditText
            android:id="@+id/txtDonAddress_signup"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/capsulebuttonboundary"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColorHint="#534b4b" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="310dp"
            android:src="@drawable/location" />

        <EditText
            android:id="@+id/txtDonCNIC"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/capsulebuttonboundary"
            android:ems="10"
            android:gravity="center"
            android:hint="CNIC"
            android:inputType="number"
            android:textColorHint="#534b4b" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginTop="155dp"
            app:srcCompat="@drawable/cniccc" />

        <Spinner
            android:id="@+id/spinnerOpt"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/capsulebuttonboundary"
            android:entries="@array/option_arrays"
            android:textAlignment="center"
            android:textColorHint="#534b4b" />


    </RelativeLayout>
</RelativeLayout>
