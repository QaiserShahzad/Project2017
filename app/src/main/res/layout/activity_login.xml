<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.qaiserpasha.project2017.Login">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/cloththepoorr"
        ></LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="140dp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/capsulebuttonboundary"
        android:gravity="center"
        android:orientation="vertical"
        >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:src="@drawable/user"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/txtUserName_login"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/capsulebuttonboundary"
        android:hint="User Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#534b4b" />
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/password"
                android:layout_marginLeft="5dp"
                android:id="@+id/imageView3" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="#534b4b"
                android:textAlignment="center"
                android:background="@drawable/capsulebuttonboundary"
                android:id="@+id/txtPassword_login"
               />
        </LinearLayout>




        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/capsule_button"
            android:text="Login"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:id="@+id/btnLogin" />
        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17dp"
            android:onClick="CreateAccount"
            android:text="Don't have Account ?"
            android:layout_marginTop="20dp"
            tools:ignore="OnClick" />






    </LinearLayout>




</LinearLayout>
