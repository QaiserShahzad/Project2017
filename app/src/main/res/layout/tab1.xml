<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/user" />
        <TextView
            android:id="@+id/tvuserr"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:gravity="center"
            android:text="User Name" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/capsulebuttonboundary"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:textColor="#fc0505"
            android:text="\t* Kindly pack your donation in one clean \n \t  shopping bag." />
    </LinearLayout>


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/capsulebuttonboundary"
            android:gravity="center">



            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:hint="Address"
                android:layout_marginTop="7dp"
                android:textColorHint="#534b4b"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@drawable/capsulebuttonboundary"
                android:id="@+id/editAddress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use Given Addres"
                android:textSize="17dp"
                android:padding="5dp"
                android:id="@+id/givenAdd"
                android:layout_marginLeft="70dp"
                />
            <EditText
                android:id="@+id/editBagId"
                android:layout_width="1dp"
                android:layout_height="2dp"
                android:textColorHint="#534b4b"
                android:gravity="center"
                android:ems="10"
                android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloth Items"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginRight="110dp"
                    android:textSize="15dp"
                    android:id="@+id/label1"
                    />

            <EditText
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:hint="No. Of Clothes"
                android:textColorHint="#534b4b"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@drawable/capsulebuttonboundary"
                android:id="@+id/editNoOfClothes"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginRight="130dp"
                android:textSize="15dp"
                android:id="@+id/label2"
                />
            <TextView
                android:id="@+id/textViewCallender"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="@drawable/capsulebuttonboundary"
                android:gravity="center"
                android:onClick="Callender"
                android:text="Date"
                android:layout_marginTop="5dp"
                android:textColorHint="#534b4b"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginRight="130dp"
                android:textSize="15dp"
                android:id="@+id/label3"
                />
            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="@drawable/capsulebuttonboundary"
                android:gravity="center"
                android:onClick="Time"
                android:text="Time"
                android:layout_marginTop="5dp"
                android:textColorHint="#534b4b"
                android:textSize="20dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/DonateButton"
                android:background="@drawable/capsule_button"
                android:text="Donate" />

            <!--<TextView-->
            <!--android:id="@+id/textViewLocation"-->
            <!--android:layout_width="350dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:gravity="center"-->
            <!--android:onClick="Location"-->
            <!--android:text="Use Current Location"-->
            <!--android:textSize="18dp" />-->

        </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>
