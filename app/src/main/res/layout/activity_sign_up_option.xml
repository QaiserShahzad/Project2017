<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context="com.example.qaiserpasha.project2017.SighUpFolder.SignUpOption">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        android:background="@drawable/capsulebuttonboundary">


        <Button
            android:text="Donor"
            android:background="@drawable/capsule_button"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDonarSignUp" />


        <Button
            android:text="Donee"
            android:background="@drawable/capsule_button"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_width="250dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDoneeSignUp" />



    </LinearLayout>
</RelativeLayout>
