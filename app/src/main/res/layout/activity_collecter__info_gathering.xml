<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context="com.example.qaiserpasha.project2017.WelcomeCollector">


    <LinearLayout
        android:id="@+id/Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewCam"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/dress" />

            <ImageView
                android:id="@+id/gallerry"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/gallery" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/user" />
            <TextView
                android:id="@+id/tvuserr"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:textSize="18dp"
                android:textColor="#000"
                android:gravity="center"
                android:text="User Name" />
        </LinearLayout>




        <!--<TextView-->
        <!--android:text="Take Picture"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:textSize="15dp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/takePics"-->
        <!--android:onClick="Click"-->
        <!--android:textColorHint="#0e0e0e"-->
        <!--android:layout_weight="0.10" />-->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Add_Item"
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:background="@drawable/capsulebuttonboundary">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textVie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15dp"
        android:text="Bag Id" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="33dp"
        android:textAlignment="center"
        android:background="@drawable/capsulebuttonboundary"
        android:hint="ID"
        android:ems="10"
        android:id="@+id/editTextBagID"
        android:inputType="number" />
</LinearLayout>

        <RadioGroup
            android:layout_below="@+id/txtPassword_login"
            android:layout_width="match_parent"
            android:id="@+id/radioBtngroup"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/radiobtnMale"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=" Male"/>
            <RadioButton
                android:id="@+id/radiobtnFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="50dp"
                android:text=" Female"/>


        </RadioGroup>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Age" />
            <Spinner
                android:id="@+id/spinnerAge"
                android:layout_marginLeft="48dp"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:entries="@array/age_arrays"
                android:layout_marginTop="5dp"
                android:background="@drawable/capsulebuttonboundary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Season" />
            <Spinner
                android:id="@+id/spinnerSeason"
                android:layout_marginLeft="25dp"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:entries="@array/seasons_arrays"
                android:layout_marginTop="5dp"
                android:background="@drawable/capsulebuttonboundary"
                android:prompt="@string/seasons_prompt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Type" />
            <Spinner
                android:id="@+id/spinnerType"
                android:layout_marginLeft="42dp"
                android:layout_width="200dp"
                android:textAlignment="center"
                android:layout_height="30dp"
                android:entries="@array/items_arrays"
                android:layout_marginTop="5dp"
                android:background="@drawable/capsulebuttonboundary"/>
        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15dp"
        android:text="Size" />
    <Spinner
        android:id="@+id/spinnerSize"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="47dp"
        android:entries="@array/uperWear_size_arrays"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/capsulebuttonboundary"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textColor="#000"
                android:textSize="15dp" />
            <Spinner
                android:id="@+id/spinnerColor"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="39dp"
                android:entries="@array/color_arrays"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/capsulebuttonboundary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textVie9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Quantity" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColorHint="#000"
                android:background="@drawable/capsulebuttonboundary"
                android:hint="Quantity"
                android:id="@+id/editTextQuantitty"
                android:inputType="number" />
        </LinearLayout>


        <Button
            android:id="@+id/btnSubmitt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
         android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/capsule_button"
            android:text="Save"
            android:textColorHint="#000"
            android:textStyle="bold" />




    </LinearLayout>


</RelativeLayout>


