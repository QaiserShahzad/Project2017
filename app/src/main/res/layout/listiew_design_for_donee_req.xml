<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDoneeReqNme"
                android:textColor="#000"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/capsulebuttonboundary"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="Donee Name"
                android:textSize="17dp" />
            <Button
                android:id="@+id/btnDoneeReqAccept"
                android:textStyle="bold"
                android:text="Accept"
                android:textColor="#00b100"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/capsulebuttonboundary"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:id="@+id/tvDoneeReqCityName"-->
                <!--android:textColor="#000"-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:background="@drawable/capsulebuttonboundary"-->
                <!--android:gravity="center"-->
                <!--android:text="City Name"-->
                <!--android:textSize="17dp" />-->
            <Button
                android:id="@+id/btnDoneeReqDelete"
                android:textStyle="bold"
                android:background="@drawable/capsulebuttonboundary"
                android:text="Reject"
                android:textColor="#ee0000"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/labeltvClothId"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Cloth ID :"
                android:textStyle="bold"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/tvAdminDoneeReqClothId"
                android:textColor="#000"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/capsulebuttonboundary"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Cloth ID"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/labeltvQuantity"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Quantity :"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/tvDoneeReqQuantity"
                android:textColor="#000"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/capsulebuttonboundary"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Items"
                android:textSize="14dp" />
        </LinearLayout>



    </LinearLayout>




</LinearLayout>